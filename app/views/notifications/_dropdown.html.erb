<% cache [current_user, notifications] do %>
   <% if notifications.any? %>
  <div class="notification-header">
    Notifications
    (<span data-behavior='unread-count'><%= unread_count %></span>)
    <div class="pull-right">
      <%= link_to 'Mark all as read',
                  project_notification_path(current_project, id: 'all'),
                  method: :put,
                  remote: true
                  %>
    </div>
  </div>
  <% end %>
  <ul class="notification-container" >
    <% if notifications.any? %>
      <%= render notifications %>
    <% else %>
      <li class="text-center">You don't have any notifications yet.</li>
    <% end %>
  </ul>
  <% if notifications.any? %>
    <div class="footer text-center">
      <%= link_to 'See all notifications', project_notifications_path(current_project) %>
    </div>
  <% end %>
<% end %>
